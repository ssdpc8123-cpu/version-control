<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/lock_bg"
    tools:context=".MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <!-- Status banner -->
        <TextView
            android:id="@+id/tvStatus"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="12dp"
            android:textSize="14sp"
            android:textColor="@color/lock_text_primary"
            android:background="#14202A"
            android:text="Status"
            android:layout_marginBottom="16dp"/>

        <!-- Feature cards row -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="2"
            android:gravity="center">

            <!-- Permissions card -->
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical"
                android:padding="12dp"
                android:layout_marginEnd="8dp"
                android:background="@drawable/main_card_bg">

                <ImageView
                    android:layout_width="36dp"
                    android:layout_height="36dp"
                    android:src="@drawable/main_icon_lock"
                    android:tint="@color/lock_key_tint"
                    android:paddingBottom="4dp"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Permissions"
                    android:textColor="@color/lock_text_secondary"
                    android:textSize="12sp"/>

                <ImageButton
                    android:id="@+id/btnCheck"
                    android:layout_width="match_parent"
                    android:layout_height="48dp"
                    android:layout_marginTop="8dp"
                    android:background="@drawable/main_button_bg"
                    android:contentDescription="Check permissions"
                    android:scaleType="center"
                    android:src="@drawable/main_icon_lock"
                    android:tint="@color/lock_key_tint"/>
            </LinearLayout>

            <!-- Enable/Disable card -->
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical"
                android:padding="12dp"
                android:layout_marginStart="8dp"
                android:background="@drawable/main_card_bg">

                <ImageView
                    android:layout_width="36dp"
                    android:layout_height="36dp"
                    android:src="@drawable/main_icon_shield"
                    android:tint="@color/lock_key_tint"
                    android:paddingBottom="4dp"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Second Lock"
                    android:textColor="@color/lock_text_secondary"
                    android:textSize="12sp"/>

                <Switch
                    android:id="@+id/switchEnable"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=""
                    android:layout_marginTop="8dp"/>
            </LinearLayout>
        </LinearLayout>

        <!-- Password card -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="12dp"
            android:layout_marginTop="16dp"
            android:background="@drawable/main_card_bg">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="ðŸ”‘ Change PIN"
                android:textColor="@color/lock_text_primary"
                android:textSize="14sp"
                android:paddingBottom="8dp"/>

            <EditText
                android:id="@+id/etNew"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="New PIN (4 digits)"
                android:inputType="numberPassword"
                android:maxLength="4"
                android:ems="4"
                android:textColor="@color/lock_text_primary"
                android:textColorHint="@color/lock_text_secondary"
                android:backgroundTint="@color/lock_key_tint"
                android:importantForAutofill="no"/>

            <EditText
                android:id="@+id/etConfirm"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Confirm PIN (4 digits)"
                android:inputType="numberPassword"
                android:maxLength="4"
                android:ems="4"
                android:textColor="@color/lock_text_primary"
                android:textColorHint="@color/lock_text_secondary"
                android:backgroundTint="@color/lock_key_tint"
                android:importantForAutofill="no"
                android:layout_marginTop="8dp"/>

            <Button
                android:id="@+id/btnSave"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Save"
                android:layout_marginTop="12dp"
                android:background="@drawable/main_button_bg"
                android:textColor="@color/lock_key_tint"/>
        </LinearLayout>

    </LinearLayout>
</ScrollView>
