<?xml version="1.0" encoding="utf-8"?>
<ripple xmlns:android="http://schemas.android.com/apk/res/android"
    android:color="@color/lock_key_ripple">
    <item>
        <layer-list>
            <!-- Soft shadow -->
            <item>
                <shape android:shape="oval">
                    <solid android:color="#20000000"/>
                </shape>
            </item>
            <!-- Main glossy button on top with small inset to reveal shadow -->
            <item android:bottom="3dp">
                <shape android:shape="oval">
                    <gradient
                        android:type="linear"
                        android:angle="270"
                        android:startColor="#FF3A3A3A"
                        android:endColor="#FF1F1F1F"/>
                    <stroke android:width="1dp" android:color="#40FFFFFF"/>
                </shape>
            </item>
        </layer-list>
    </item>
</ripple>
